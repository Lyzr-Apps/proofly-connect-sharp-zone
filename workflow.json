  "fairness_framework": {
    "core_principles": [
      "Neutral, non-accusatory language throughout",
      "Human-in-the-loop for all negative decisions",
      "3+ pattern requirement before trust impact",
      "Improvement focus, not punishment",
      "Oral defense upgrade opportunities",
      "Public receipts show only positive states"
    ],
    "prohibited_actions": [
      "Automated trust score reductions",
      "Single-pattern penalties",
      "Accusatory language",
      "Hidden decision factors",
      "Permanent exclusions without appeal"
    ],
    "student_rights": [
      "Transparent data collection",
      "Opportunity to explain process",
      "Proactive oral defense requests",
      "Appeal all decisions",
      "See all behavioral context",
      "Control public portfolio visibility"
    ]
  },
